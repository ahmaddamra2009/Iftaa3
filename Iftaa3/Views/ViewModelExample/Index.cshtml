@model BookEmployeeViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<table class="table table-bordered">
    <tr>
        <td>@Html.DisplayNameFor(model => Model.Employees.FirstOrDefault().EmployeeName) </td>
        <td>@Html.DisplayNameFor(model => Model.Employees.FirstOrDefault().Department.DepartmentName) </td>
    </tr>
    @foreach (var emp in Model.Employees)
    {
        <tr>
            <td> @emp.EmployeeName</td>
            <td> @emp.Department.DepartmentName</td>
        </tr>
    }
</table>



<table class="table table-bordered">
    <tr>
        <td>@Html.DisplayNameFor(model => Model.Authors.FirstOrDefault().AuthorName) </td>
        <td>@Html.DisplayNameFor(model => Model.Authors.FirstOrDefault().Email) </td>
    </tr>
    @foreach (var author in Model.Authors)
    {
        <tr>
            <td> @author.AuthorName</td>
            <td> @author.Email</td>
        </tr>
    }
</table>


